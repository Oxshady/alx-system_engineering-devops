#!/usr/bin/env bash
# okey lwt's install nginx and configure it
sudo apt-get -y update
sudo apt-get -y install nginx
sudo ufw allow 'Nginx HTTP'
echo "Hello World" | sudo tee /var/www/html/index > /dev/null
sudo sed -i '/listen 80 default_server/a rewrite ^/redirect_me https://www.youtube.com/ permanent;' /etc/nginx/sites-available/default
echo "Ceci n'est pas une page" | sudo tee /var/www/html/err.html > /dev/null
sudo sed -i '/listen 80 default_server/a error_page 404 /err.html;' /etc/nginx/sites-available/default
sudo service nginx restart
